<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".exerciseActivities.StatisticsActivity">

    <TextView
        android:id="@+id/attribute4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/attribute3"
        app:layout_constraintStart_toEndOf="@+id/attribute3" />

    <TextView
        android:id="@+id/statisticsExerciseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Walking Statistics"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/field_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statisticsExerciseLabel">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/statisticsProfilepic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:src="@drawable/logo_landscape_round_corner"
            app:civ_border_color="@color/dark_blue"
            app:civ_border_width="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/statisticsProfilepic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Date"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/nameView"
            app:layout_constraintTop_toBottomOf="@+id/nameView" />

        <ImageView
            android:id="@+id/exerciseImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/logo_landscape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/attributeLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="100dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <TextView
        android:id="@+id/attributeLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/attributeLabel1"
        app:layout_constraintStart_toEndOf="@+id/attributeLabel1" />

    <TextView
        android:id="@+id/attribute1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/attributeLabel1"
        app:layout_constraintTop_toBottomOf="@+id/attributeLabel1" />

    <TextView
        android:id="@+id/attribute2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/attribute1"
        app:layout_constraintStart_toEndOf="@+id/attribute1" />

    <TextView
        android:id="@+id/attributeLabel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/attribute1"
        app:layout_constraintTop_toBottomOf="@+id/attribute1" />

    <TextView
        android:id="@+id/attributeLabel4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/attributeLabel3"
        app:layout_constraintStart_toEndOf="@+id/attributeLabel3" />

    <TextView
        android:id="@+id/attribute3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/attributeLabel3"
        app:layout_constraintTop_toBottomOf="@+id/attributeLabel3" />

    <TextView
        android:id="@+id/attributeLabel5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attribute3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/attribute5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="@color/background_color_light_azul"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/attributeLabel5"
        app:layout_constraintTop_toBottomOf="@+id/attributeLabel5" />

</androidx.constraintlayout.widget.ConstraintLayout>